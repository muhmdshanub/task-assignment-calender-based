{
  "compilerOptions": {
      "typeRoots": ["./node_modules/@types", "./types"],
      "target": "ES2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist"
  },
  "include": [
      "./**/*",
      "./@types/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
